#!/bin/bash

python3 -c "import stdeb3" 2> /dev/null
if [ $? -eq 0 ]
then
    _STDEB="stdeb3.command"
    _PYTHON=$(which python3)
else
    _STDEB="stdeb.command"
    _PYTHON=$(which python2)
fi

function create_package
{
    if [ -f stdeb.cfg ]
    then
        $_PYTHON setup.py --command-packages=stdeb.command bdist_deb
    else
        $_PYTHON setup.py bdist_rpm
    fi
}

function get_distro
{
    local _DISTRO=$($_PYTHON -c "from migasfree_client import utils; print(utils.get_distro_name())")
    local _MAJOR_VERSION=$($_PYTHON -c "from migasfree_client import utils; print(utils.get_distro_major_version())")
    local _FILE=${_DISTRO}

    if [ -n "$_MAJOR_VERSION" ]
    then
        _FILE=${_FILE}.${_MAJOR_VERSION}
    fi

    if [ -f "setup.cfg.d/$_FILE" ]
    then
        ln -sf "setup.cfg.d/$_FILE" setup.cfg
        echo "$_FILE"
        return
    fi

    if [ -f "stdeb.cfg.d/$_FILE" ]
    then
        ln -sf "stdeb.cfg.d/$_FILE" stdeb.cfg
        echo "$_FILE"
        return
    fi

    echo ""
}

##############
# main process
##############

cd ..
if [ -z "$(get_distro)" ]
then
    echo "Computer distro is not available. Aborting package creation."
    exit 1
fi

create_package
